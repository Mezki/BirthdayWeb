@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">List of Birthdays</h2>
        </div>

        <div class="col-6" text-end>
            <a asp-controller="Category" asp-action="AllList" class="btn btn-primary">
            <i class="bi bi-eye-fill"></i> &nbsp; Show All Birthdays
            </a>
        </div>
         <div class="col-6" text-end>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> &nbsp; Add New Birthday
            </a>
        </div>
    </div>



<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>

            <th>
                Birth Date
            </th>
        </tr>

    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.FirstName
                </td>

                <td width="40%">
                    @obj.LastName
                </td>

                    <td width="20%">
                        @obj.BirthDate
                    </td>

            </tr>
        
        }

    </tbody>

</table>

</div>

