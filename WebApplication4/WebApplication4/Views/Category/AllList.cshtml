@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-primary">List of Birthdays</h2>
        </div>

        <div class="col-6" text-end>
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
              <i class="bi bi-plus-circle"></i> &nbsp; Add New Birthday
            </a>
        </div>
    </div>



<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Birth Date
            </th>
        </tr>

    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                        @obj.FirstName
                </td>

                <td width="40%">
                        @obj.LastName
                </td>

                    <td width="50%">
                        @obj.BirthDate
                    </td>
                    <td>
                        
                        <div class="w-100 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        </div>

                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                <i class="bi bi-trash-fill"></i> &nbsp; Delete
                            </a>
                        </div>
                    </td>
            </tr>
        
        }

    </tbody>

</table>

</div>

